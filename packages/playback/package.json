{
  "name": "@videojs/playback",
  "version": "0.0.0",
  "description": "videojs playback engine",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist ./dist-api-reference ./dist-demo ./*.tgz ./coverage ./node_modules .size-limit-output.json",
    "prebuild": "npm run clean",
    "build": "run-p build:js build:api-reference build:demo",
    "build:js": "node vite.lib.config.js",
    "build:api-reference": "npx typedoc --options typedoc.json",
    "build:demo": "vite build -c vite.demo.config.ts",
    "dev": "vite -c vite.demo.config.ts",
    "size-limit:verify": "npx size-limit",
    "size-limit:json": "output=$(size-limit --json) && echo \"$output\" > .size-limit-output.json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:vitest-ui": "vitest --ui",
    "test:browser": "npx playwright install && vitest run --browser",
    "lint": "eslint .",
    "pack": "npm pack"
  },
  "keywords": [
    "videojs",
    "playback",
    "hls",
    "dash",
    "mpeg-dash",
    "mse",
    "eme",
    "m3u8",
    "video",
    "streaming"
  ],
  "author": "Brightcove, Inc",
  "license": "Apache-2.0",
  "files": [
    "./dist/",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@videojs/hls-parser": "*"
  },
  "main": "./dist/main-with-worker/core/cjs/index.min.js",
  "module": "./dist/main-with-worker/core/es/index.min.js",
  "es2015": "./dist/main-with-worker/core/es/index.min.js",
  "types": "./dist/main-with-worker/core/types/index.min.d.ts",
  "exports": {
    "./main-only/core": {
      "types": "./dist/main-only/core/types/index.min.d.ts",
      "require": "./dist/main-only/core/cjs/index.min.js",
      "import": "./dist/main-only/core/es/index.min.js"
    },
    "./main-only/core/debug": {
      "types": "./dist/main-only/core/types/index.min.d.ts",
      "require": "./dist/main-only/core/cjs/index.debug.js",
      "import": "./dist/main-only/core/es/index.debug.js"
    },
    "./main-with-worker/core": {
      "types": "./dist/main-with-worker/core/types/index.min.d.ts",
      "require": "./dist/main-with-worker/core/cjs/index.min.js",
      "import": "./dist/main-with-worker/core/es/index.min.js"
    },
    "./main-with-worker/core/debug": {
      "types": "./dist/main-with-worker/core/types/index.min.d.ts",
      "require": "./dist/main-with-worker/core/cjs/index.debug.js",
      "import": "./dist/main-with-worker/core/es/index.debug.js"
    }
  }
}
